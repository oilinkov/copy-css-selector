{
  "name": "Copy CSS Selector",
  "description": "Copy the CSS selector of any element easily.",
  "version": "1.0.0",
  "manifest_version": 3,
  "author": "Oleg Ilinkov",
  "homepage_url": "https://github.com/твоеимя/copy-css-selector",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "devtools_page": "devtools.html",
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "css": ["css/style.css"]
    }
  ]
}